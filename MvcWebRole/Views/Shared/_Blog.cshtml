<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/reset.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/media-queries.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/main.css")">
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobstrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
        <!--[if lt IE 9]>
            <script src="../../js/html5.js"></script>
        <![endif]-->
    </head>
    <body id="home">
        <div id="wrapper">
            @{
                Html.RenderPartial("~/Views/Shared/_blogHeader.cshtml");
            }
            <section id="main-content">
                @RenderBody()
            </section>
            @{
                Html.RenderPartial("~/Views/Shared/_blogFooter.cshtml");
            }
        </div>
    </body>
</html>
